<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/itemListColor"
                                                   android:id="@+id/tiempoLayout">

    <TextView
            android:text="Ciudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:id="@+id/tiempoCiudad" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/letter_color_splash" android:textSize="30sp" android:textStyle="bold"/>
    <TextView
            android:text="Pais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/tiempoPais"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tiempoCiudad"
            android:textColor="@color/colorPrimary" android:textStyle="bold" android:textSize="24sp"/>
    <TextView
            android:text="Hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/tiempoHora"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tiempoPais"
            android:textColor="@color/colorPrimary" android:textSize="18sp" android:textStyle="bold"/>
    <TextView
            android:text="25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tiempoTemperatura"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/tiempoHora"
            android:textSize="72dp" android:textStyle="bold"
            android:textColor="@color/color_selector_navigation_item"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/tiempoImagen"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tiempoHora"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
    <TextView
            android:text="Descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/tiempoDescripcion"
            app:layout_constraintTop_toBottomOf="@+id/tiempoTemperatura" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.5" android:textColor="@color/colorPrimary" android:textSize="18sp"/>
    <TextView
            android:text="Temperatura (Max):"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tiempoTempMax"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/tiempoDescripcion" android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Temperatura (Min):"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tiempoTempMin"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/tiempoTempMax" android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Humedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tiempoHumedad"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/tiempoTempMin"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Presion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tiempoPresion"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tiempoHumedad"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Visibilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tiempoVisibilidad"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/tiempoPresion" android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/ic_sunrise" android:id="@+id/tiempoAmancer"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tiempoVisibilidad"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/ic_sunset" android:id="@+id/tiempoAnochecer"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tiempoVisibilidad"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/tiempoAmanecerHora"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tiempoAmancer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:textColor="@color/colorPrimary" android:gravity="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/tiempoAnocherHora"
            android:textColor="@color/colorPrimary" android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tiempoAnochecer" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>