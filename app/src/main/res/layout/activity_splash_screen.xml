<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.joseluisgs.mislugares.SplashActivityActivity" android:background="@color/colorAccent">
    <ImageView
            android:src="@drawable/ic_mapa"
            android:layout_width="317dp"
            android:layout_height="342dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/splashImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.254"
            app:srcCompat="@drawable/ic_mapa"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/splashTituloText"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/splashImage"
            android:textColor="@color/letter_color_splash" android:fontFamily="@font/black_ops_one"
            android:textSize="48sp"/>
    <TextView
            android:text="Firebase Version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/splashVersionText"
            app:layout_constraintTop_toBottomOf="@+id/splashTituloText"
            android:textColor="@color/color_selector_navigation_item" android:textSize="30sp"
            android:textStyle="bold|italic" android:fontFamily="@font/caveat_bold"
            android:gravity="center|center_horizontal|center_vertical" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.821" app:layout_constraintEnd_toEndOf="parent"
            android:rotation="-10"/>
</androidx.constraintlayout.widget.ConstraintLayout>